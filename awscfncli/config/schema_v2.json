{
  "$schema": "http://json-schema.org/schema#",
  "title": "cfn-cli config",
  "type": "object",
  "properties": {
    "Version": {
      "type": "integer"
    },
    "Stages": {
      "title": "stages",
      "type": "object",
      "additionalProperties": {
        "title": "stage config",
        "type": "object",
        "additionalProperties": {
          "title": "stack config",
          "type": "object",
          "properties": {
            "Profile": { "type": "string" },
            "Region": { "type": "string" },
            "Package": { "type": "boolean"},
            "ArtifactStore": { "type": "string" },
            "Template": { "type": "string" },
            "Parameters": { "type": "object" },
            "DisableRollback": { "type": "string"},
            "RollbackConfiguration": { "type": "object" },
            "TimeoutInMinutes": { "type": "integer" },
            "NotificationARNs": { "type": "array" },
            "Capabilities": { "type": "array" },
            "ResourceTypes": { "type": "array" },
            "RoleARN": { "type": "string" },
            "OnFailure": { "type": "string" },
            "StackPolicy": { "type": "string" },
            "Tags": { "type": "object" },
            "ClientRequestToken": { "type": "string" },
            "EnableTerminationProtection": { "type": "boolean" }
          },
          "additionalProperties": false
        }
      },
      "minProperties": 1
    }
  },
  "required": ["Stages"]
}
